{
	"version": "2.0.2",
	"compilerOptions": {
		"declaration": false,
		"experimentalDecorators": true,
		"module": "umd",
		"lib": [
			"dom",
			"es5",
			"es2015.iterable",
			"es2015.promise",
			"es2015.symbol",
			"es2015.symbol.wellknown"
		],
		"noImplicitAny": true,
		"outDir": "_build/",
		"baseUrl": "node_modules",
		"removeComments": false,
		"sourceMap": true,
		"target": "es5",
		"moduleResolution": "node",
		"strictNullChecks": true,
		"noImplicitThis": true,
		"types": [ "intern" ],
		"typeRoots": [
			"./node_modules/@types",
			"./node_modules/intern/types"
		]
	},
	"include": [
		"./typings/index.d.ts",
		"./src/**/*.ts",
		"./tests/**/*.ts"
	]
}
